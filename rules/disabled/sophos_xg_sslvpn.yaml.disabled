alert_text_args:
        - "@timestamp"
        - "sophos.xg.user_name"
        - "sophos.xg.src_ip"
        - "sophos.xg.dst_ip"
        - "sophos.xg.status"
        - "sophos.xg.message"
        - _id
        - filter.start_time
        - filter.end_time

